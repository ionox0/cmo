#!/opt/common/CentOS_6-dev/python/python-2.7.10/bin/python

import argparse

import cmo


# Example Usage:
#
# java -jar ${fgbio_jar} --tmp-dir=${scratch_dir} SetMateInformation
# -i ${output_folder}/sample_with_UMI_sorted.bam
# -o ${output_folder}/sample_with_UMI_sorted_mateFixed.bam

if __name__ =='__main__':
    parser = argparse.ArgumentParser(description="Run Fulcrum (SetMateInformation)", add_help=False)
    fulcrum = cmo.util.programs['fulcrum']['default']
    # todo - bypassing singularity for now
    # java = cmo.util.programs['java']['jdk1.8.0_25']
    java = '/opt/common/CentOS_6/java/jdk1.8.0_25/bin/java'

    parser.add_argument("-td", "--tmp_dir", help="", required = True)
    parser.add_argument("-i", "--input_bam", help="", required = True)
    parser.add_argument("-o", "--output_bam_filename", help="", required = True)

    (args, unknowns) = parser.parse_known_args()

    cmd = [java, "-server -jar", fulcrum] # -Xms8g -Xmx30g
    cmd = " ".join(cmd)
    cmd = "{} --tmp-dir={} SetMateInformation -i {} -o {}".format(cmd, args.tmp_dir, args.input_bam,
                                                                  args.output_bam_filename)

    cmo.util.call_cmd(cmd, shell=True)

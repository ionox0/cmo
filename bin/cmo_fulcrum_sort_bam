#!/opt/common/CentOS_6-dev/python/python-2.7.10/bin/python

import argparse

import cmo


# Example Usage:
#
# java -jar ${fgbio_jar} --tmp-dir=${scratch_dir}  SortBam
# --input=${output_folder}/sample_with_UMI.bam
# --sort-order=Queryname
# --output ${output_folder}/sample_with_UMI_sorted.bam

if __name__ =='__main__':
    parser = argparse.ArgumentParser(description="Run Fulcrum (SortBam)", add_help=False)
    fulcrum = cmo.util.programs['fulcrum']['default']
    java = cmo.util.programs['java']['jdk1.8.0_25']

    parser.add_argument("-td", "--tmp_dir", help="", required = True)
    parser.add_argument("-i", "--input_bam", help="", required = True)
    parser.add_argument("-s", "--sort_order", help="", required = True)
    parser.add_argument("-o", "--output_bam_filename", help="", required = True)

    (args, unknowns) = parser.parse_known_args()

    cmd = [java, "-server -Xms256m -Xmx30g -jar", fulcrum] # -Xmx8g
    cmd = " ".join(cmd)
    cmd = "{} --tmp-dir={} SortBam --input={} --sort-order={} --output {}".format(cmd, args.tmp_dir,
                                                                             args.input_bam, args.sort_order,
                                                                             args.output_bam_filename)

    cmo.util.call_cmd(cmd, shell=True)
